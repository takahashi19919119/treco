
<%= form_with model: @user, url: user_password_path,local: true do |f| %>
<div class='form-wrap'>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- スタイルシート -->
<%= stylesheet_link_tag 'treco_main', :media => "all" %>

<div id="password_reset_container">
<p id="return-btn"><a id="return-btn-link" href=""onclick="window.history.back(); return false;">戻る</a></p>
<div class="field">
<h1><%= image_tag 'main_logo.png',id: 'create_account_logo' %></h1>
<h2 class="input-head"><%= f.label :パスワードをリセットする %><br /></h2>
<%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレスを入力",class: 'input-space' %>
</div>
<div class="actions">
<%= f.submit "送信",id: 'password-reset-btn' %>
</div>
<% end %>
</div>
