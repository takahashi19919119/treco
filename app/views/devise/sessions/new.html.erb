<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<!-- スタイルシート -->
<%= stylesheet_link_tag 'treco_main', :media => "all" %>

<!-- コンテンツ -->
<!-- フェードインエフェクトで最初に表示 -->
<div id="logo_container">
<h1 id="logo"><%= image_tag 'main_logo.png',id: 'logo_img' %></h1>

<div id="login_container">
<h2><%= image_tag 'main_logo.png',id: 'login_logo' %></h2>
<h2>ログイン</h2>

<div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: 'input-space',:placeholder => "ユーザー名" %>
  </div>
<div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'input-space',:placeholder => "メールアドレス"%>
  </div>
<div class="field">
    <%= f.password_field :password, autocomplete: "current-password",class: 'input-space',:placeholder => "パスワード" %>
  </div>
<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを保存する %>
    </div>
  <% end %>
 <div class="actions">
    <%= f.submit "ログイン",id: 'login-btn' %>
  </div>

<p id="render-code"><%= render "devise/shared/links" %></p>
  <% end %>

</div>
</div>




