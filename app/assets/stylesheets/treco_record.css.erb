@charset;

body{
 width:100%;
 background-image:url(<%= asset_path 'diet_2_back.png' %>);
 background-repeat:repeat;
 margin:0;
}

/*フェードイン関連*/
#all_container{
 animation-name: allcontainer-fadein;
 animation-duration: 3s;
 animation-timing-function: ease;
 animation-delay: 0s;
 animation-direction: alternate;
 animation-fill-mode: forwards;
 animation-iteration-count: 1;
 opacity:0;
 margin-bottom:70px;
}

@keyframes allcontainer-fadein {
  0% {opacity:0;}
  100% {opacity: 1;}
}

.item{
 width:300px;
 border:solid 1px #000000;
 font-size:25px;
 margin-left:10px;
}

#record-container{
 margin-bottom:150px;
}

/*戻るボタン関連*/
#return-btn{
 text-align:left;
 font-weight:bold;
 font-size:20px;
 margin-left:10px;
}

#return-btn-link{
 color:#000000;
}

#return-btn-link:hover{
 opacity:0.7;
 text-decoration:none;
}

