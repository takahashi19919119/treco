/*メインコンテンツ関連*/
#traning_event_container{
 padding:0;
}

.item{
 width:300px;
 border:solid 1px #000000;
 font-size:25px;
 margin-left:10px;
}

.content-set{
 width:100px;
 font-size:25px;
 margin-left:10px;
}

/*記録するボタン関連*/
#record-btn{
 width:300px;
 height:40px;
 font-size:20px;
 font-weight:bold;
 margin-top:10px;
 margin-left:10px;
 margin-bottom:20px;
 border:solid 1px;
 border-radius:5px;
 background-color:#66CCFF;
 color:#FFFFFF;
}

#record-btn:hover{
 opacity:0.7;
}

/*グローバルナビ関連*/
#nav-container{
 position:fixed;
 bottom:0;
 width:100%;
}

#global-nav{
 background-color:#000000;
 margin:0;
 opacity:0.8;
 padding:20px;
 z-index:1;
 text-align:center;
}

.nav-item{
 display:inline-block;
 margin-right:20px;
}

.nav-item-icon{
 width:20px;
 height:auto;
}

.nav-item-link{
 color:#FFFFFF;
 text-decoration:none;
 font-weight:bold;
}

.nav-item-link:hover{
 color:#87cefa;
}
