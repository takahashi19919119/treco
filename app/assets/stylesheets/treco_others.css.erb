@charset;

body{
 width:100%;
 background-image:url(<%= asset_path 'diet_2_back.png' %>);
 background-repeat:no-repeat;
 margin:0;
}

/*戻るボタン関連*/
#return-btn{
 text-align:left;
 font-weight:bold;
 font-size:20px;
 margin-left:10px;
}

/*フェードイン関連*/
#all_container{
 animation-name: allcontainer-fadein;
 animation-duration: 3s;
 animation-timing-function: ease;
 animation-delay: 0s;
 animation-direction: alternate;
 animation-fill-mode: forwards;
 animation-iteration-count: 1;
 opacity:0;
 margin-bottom:70px;
}

@keyframes allcontainer-fadein {
  0% {opacity:0;}
  100% {opacity: 1;}
}

/*その他関連*/
#return-btn-link{
 color:#000000;
 font-weight:bold;
}

#return-btn-link:hover{
 opacity:0.7;
 text-decoration:none;
}

#others-content{
padding:0;
}

.others-item{
 list-style:none;
 border-bottom:solid 1px #000000;
 padding-top:20px;
 padding-bottom:20px;
}

.others-item-link{
 text-decoration:none;
 color:#000000;
 padding-top:20px;
 padding-bottom:20px;
}

.others-item-link:hover{
 opacity:0.7;
}

/*グローバルナビ関連*/
#nav-container{
 position:fixed;
 bottom:0;
 width:100%;
}

#global-nav{
 background-color:#000000;
 margin:0;
 opacity:0.8;
 padding:30px;
 z-index:1;
 text-align:center;
}


.nav-item{
 display:inline-block;
 margin-right:60px;
}

.nav-item-icon{
 width:20px;
 height:auto;
}

.nav-item-link{
 color:#FFFFFF;
 text-decoration:none;
 font-weight:bold;
}

.nav-item-link:hover{
 color:#87cefa;
}
