@charset;

body{
width:100%;
min-height:100vh;
background-image:url(<%= asset_path 'main_back.jpg' %>);
background-repeat:no-repeat;
background-size:cover;
background-position:center;
margin:0;
text-align:center;
}

/*戻るボタン関連*/
#return-btn{
 text-align:left;
 font-weight:bold;
 font-size:20px;
 margin-left:10px;
}

#return-btn-link{
 color:#000000;
}

#return-btn-link:hover{
 opacity:0.7;
 text-decoration:none;
}

/*mainのロゴ関連*/
#logo_container{
 position: relative;
}

#logo{
 text-align:center;
 animation-name: smooth-fadein-out;
 animation-duration: 2.5s;
 animation-timing-function: ease;
 animation-delay: 0s;
 animation-iteration-count: 2;
 animation-direction: alternate;
 animation-fill-mode: forwards;
 margin-top:0;
}

/*ロゴのフェードイン・フェードアウト*/ 
@keyframes smooth-fadein-out {
  0% {opacity: 0;}
  100% {opacity: 0.8;}
}

/*main2(目的選択)関連*/
#main2_container{
 text-align:center;
 animation-name: smooth-fadein;
 animation-duration: 2.5s;
 animation-timing-function: ease;
 animation-delay: 0s;
 animation-iteration-count: 1;
 animation-direction: alternate;
 animation-fill-mode: forwards;
}

/*目的選択のフェードイン*/ 
@keyframes smooth-fadein {
  0% {opacity: 0;}
  100% {opacity: 0.8;}
}

.main2_button{
 margin-bottom:70px;
}

.main2_button a{
 background-color:#000000;
 border:solid 1px #000000;
 border-radius:10px;
 color:#FFFFFF;
 opacity:0.9;
 padding:20px;
 text-decoration:none;
}

.main2_button a:hover{
 opacity:0.6;
}

/*ログイン関連*/
#logo_img{
 border:solid 1px #7e837f;
 border-radius:50%;
 width:300px;
 margin-top:50%;
}
  
#login_container{
 position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top:0;
}

#login_container{
 text-align:center;
 animation-name: button-fadein;
 animation-duration: 2.5s;
 animation-timing-function: ease;
 animation-delay: 4.5s;
 animation-direction: alternate;
 animation-fill-mode: forwards;
 animation-iteration-count: 1;
 opacity:0;
 margin-bottom:70px;
 border:sodlid 1px #FFFFFF;
 background-color:#FFFFFF;
 width:330px;
 height:auto;
}

/*ログインフォームのフェードイン、ログインフォーム関連*/ 
@keyframes button-fadein {
  0% {opacity:0;}
  100% {opacity: 1;}
}

#login_logo{
border:solid 1px #000000;
border-radius:50%;
width:100px;
height:auto;
}

.input-space{
 width:300px;
 height:40px;
 font-size:100%;
 margin-top:10px;
 margin-bottom:10px;
}

#login-btn{
 width:300px;
 height:40px;
 font-size:20px;
 font-weight:bold;
 margin-top:10px;
 border:solid 1px;
 border-radius:5px;
 background-color:#66CCFF;
 color:#FFFFFF;
}

#login-btn:hover{
 opacity:0.7;
}

#create-reset{
 color:#000000;
}

#create-reset:hover{
 opacity:0.7;
 text-decoration:none;
}


